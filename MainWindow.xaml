<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid>
        <StackPanel Margin="68,20,-68,-20">
            <TextBlock Text="温度" FontSize="14" FontWeight="Bold" />
            <TextBox Text="{Binding Value}" />
            <TextBlock Text="湿度" FontSize="14" FontWeight="Bold" />
            <TextBox Text="{Binding Input}" FontSize="14" FontWeight="Bold"/>
            <Button Content="设置" Width="200" Command="{Binding BtnCommand}" />
        </StackPanel>

    </Grid>
</Window>
